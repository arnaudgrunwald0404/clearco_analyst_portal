# Social Media Crawler Environment Variables
# Copy this file to .env.local and fill in your API credentials

# Database (required)
DATABASE_URL="file:./dev.db"

# Twitter API v2 Credentials
# Get these from: https://developer.twitter.com/en/portal/dashboard
TWITTER_BEARER_TOKEN="your_twitter_bearer_token_here"

# LinkedIn API Credentials  
# Get these from: https://www.linkedin.com/developers/
LINKEDIN_ACCESS_TOKEN="your_linkedin_access_token_here"

# Optional: Crawler Configuration
CRAWLER_MAX_POSTS_PER_DAY=50
CRAWLER_LOOKBACK_DAYS=7
CRAWLER_MIN_RELEVANCE_SCORE=30

# Optional: Monitoring and Alerting
SLACK_WEBHOOK_URL="your_slack_webhook_url_for_alerts"
ALERT_EMAIL="admin@yourcompany.com"

# Optional: Rate Limiting (requests per hour)
TWITTER_RATE_LIMIT=180
LINKEDIN_RATE_LIMIT=100
